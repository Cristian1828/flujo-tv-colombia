---
import { site, waLink } from '../config/site';

const nav = [
  { href: '#inicio', label: 'Inicio' },
  { href: '#beneficios', label: 'Beneficios' },
  { href: '#como-funciona', label: 'Cómo funciona' },
  { href: '#planes', label: 'Planes' },
  { href: '#descargas', label: 'Descargas' },
  { href: '#preguntas', label: 'Preguntas' },
];

const buyHref = waLink('Hola, quiero comprar Flujo TV Colombia. ¿Qué plan me recomiendan?');
const waHref = waLink('Hola, quiero validar compatibilidad y activar Flujo TV Colombia.');
---

<header class="fixed inset-x-0 top-0 z-50 transition-all duration-300" id="main-header">
  <div class="mx-auto max-w-7xl px-4">
    <div class="mt-4 flex items-center justify-between rounded-2xl border border-white/5 bg-[#030014]/80 backdrop-blur-xl px-6 py-3 shadow-[0_0_40px_rgba(0,0,0,0.4)]">
      
      <!-- Logo Brand -->
      <a href="#inicio" class="flex items-center gap-3 group">
        <div class="w-10 h-10 overflow-hidden">
           <img
            src="/logo_flujo.png"
            alt="Logo Flujo TV"
            class="w-full h-full object-contain brightness-125 drop-shadow-[0_0_10px_rgba(251,146,60,0.5)]"
          />
        </div>
        <div class="hidden sm:block leading-none">
          <div class="font-black text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-amber-500 tracking-wide text-lg">FLUJO TV</div>
          <div class="text-[9px] font-bold text-orange-200 uppercase tracking-[0.2em]">Premium</div>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center gap-1 p-1">
        {nav.map((item) => (
          <a class="px-3 py-1.5 rounded-md text-xs font-bold font-mono text-white/60 uppercase hover:text-white hover:bg-white/5 hover:shadow-[0_0_15px_rgba(255,255,255,0.1)] transition-all duration-300 tracking-wider" href={item.href}>
            {item.label}
          </a>
        ))}
      </nav>

      <!-- Actions -->
      <div class="flex items-center gap-3">
        
        <!-- WhatsApp Cyber-Button -->
        <a
          href={waHref}
          target="_blank"
          rel="noopener noreferrer"
          class="hidden sm:flex h-10 w-10 items-center justify-center rounded-lg bg-emerald-500/10 text-emerald-400 border border-emerald-500/20 hover:bg-emerald-500 hover:text-black hover:shadow-[0_0_20px_rgba(16,185,129,0.6)] transition-all duration-300 group"
          aria-label="WhatsApp"
        >
          <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 24 24">
             <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
        </a>

        <!-- Buy Button (Clean, No Icon) -->
        <a
          href={buyHref}
          target="_blank"
          rel="noopener noreferrer"
          class="relative overflow-hidden rounded-lg bg-blue-600 px-6 py-2.5 font-black uppercase text-white transition-all hover:bg-blue-500 hover:scale-105 shadow-[0_0_20px_rgba(37,99,235,0.6)]"
        >
          <span class="relative z-10 text-xs tracking-widest">
            Comprar
          </span>
        </a>

        <!-- Mobile Toggle -->
        <button
          type="button"
          class="inline-flex lg:hidden h-10 w-10 items-center justify-center rounded-lg border border-white/20 bg-white/5 text-white hover:bg-white/10 transition"
          data-menu-button
        >
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="fixed inset-0 z-[60] hidden lg:hidden" data-menu-root>
    <div class="absolute inset-0 bg-black/90 backdrop-blur-xl" data-menu-overlay></div>
    
    <div class="absolute right-0 top-0 h-full w-[85%] max-w-sm bg-[#050B14] border-l border-white/10 p-6 shadow-2xl flex flex-col transform transition-transform duration-300 translate-x-[100%]" id="mobile-menu-content">
      
      <div class="flex items-center justify-between mb-8 pb-6 border-b border-white/10">
        <span class="text-xl font-black text-white tracking-widest">MENÚ</span>
        <button data-menu-close class="p-2 text-white hover:text-blue-400 transition-colors">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
        </button>
      </div>

      <nav class="space-y-2 flex-1 overflow-y-auto">
        {nav.map((item, i) => (
          <a 
            href={item.href} 
            class="block px-6 py-4 rounded-xl text-lg font-bold text-white/60 hover:text-white hover:bg-white/5 hover:pl-8 transition-all duration-300 border-l-2 border-transparent hover:border-blue-500 uppercase tracking-widest" 
            data-menu-link
            style={`transition-delay: ${i * 50}ms`}
          >
            {item.label}
          </a>
        ))}
      </nav>

      <div class="space-y-4 pt-6 mt-auto">
        <a href={waHref} class="flex items-center justify-center gap-3 w-full py-4 rounded-xl border border-emerald-500/30 bg-emerald-500/10 text-emerald-400 font-bold uppercase tracking-wider hover:bg-emerald-500 hover:text-black transition-all">
          Soporte WhatsApp
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  const menuBtn = document.querySelector('[data-menu-button]');
  const menuRoot = document.querySelector('[data-menu-root]');
  const menuOverlay = document.querySelector('[data-menu-overlay]');
  const menuClose = document.querySelector('[data-menu-close]');
  const menuContent = document.querySelector('#mobile-menu-content');
  const menuLinks = document.querySelectorAll('[data-menu-link]');

  function toggleMenu() {
    const isHidden = menuRoot.classList.contains('hidden');
    
    if (isHidden) {
      // Open
      menuRoot.classList.remove('hidden');
      // Small delay to allow display:block to apply before transition
      setTimeout(() => {
        menuContent.classList.remove('translate-x-[100%]');
      }, 10);
      document.body.style.overflow = 'hidden';
    } else {
      // Close
      menuContent.classList.add('translate-x-[100%]');
      // Wait for transition to finish before hiding
      setTimeout(() => {
        menuRoot.classList.add('hidden');
      }, 300);
      document.body.style.overflow = '';
    }
  }

  menuBtn?.addEventListener('click', toggleMenu);
  menuClose?.addEventListener('click', toggleMenu);
  menuOverlay?.addEventListener('click', toggleMenu);
  
  menuLinks.forEach(link => {
    link.addEventListener('click', toggleMenu);
  });
</script>
