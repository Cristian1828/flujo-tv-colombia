---
const benefits = [
  {
    title: 'Pasión Deportiva',
    subtitle: 'Sin Interrupciones',
    desc: 'Vive la adrenalina de tus eventos favoritos en tiempo real. Fútbol, Motores y más.',
    image: '/benefit-sports.png',
    color: 'from-emerald-500 to-teal-500'
  },
  {
    title: 'Cine & Series 4K',
    subtitle: 'Catálogo Actualizado',
    desc: 'Estrenos recientes y series completas de todas las plataformas líderes en una sola app.',
    image: '/benefit-cinema.png',
    color: 'from-purple-500 to-pink-500'
  },
  {
    title: 'Velocidad Turbo',
    subtitle: 'Cero Buffering',
    desc: 'Infraestructura propia optimizada para Latinoamérica. Dale play y olvídate de cargar.',
    image: '/benefit-server.png',
    color: 'from-blue-500 to-cyan-500'
  }
];
---

<section id="beneficios" class="relative py-24 bg-[#050B14]">
  
  <div class="relative z-10 max-w-7xl mx-auto px-6">
    <!-- Updated container with overflow handling -->
    <div class="flex flex-col items-center text-center mb-16 w-full overflow-hidden px-4 md:overflow-visible">
      
      <div class="inline-flex items-center gap-2 mb-6 px-3 py-1 bg-white/5 rounded-full border border-white/10">
         <span class="text-[10px] font-bold text-white/60 uppercase tracking-widest">Características</span>
      </div>
      
      <!-- Title stacked below with LARGE padding for italics -->
      <h2 class="text-4xl md:text-5xl font-black text-white italic tracking-tighter uppercase pb-4 pr-20 inline-block custom-italic-title">
        Experiencia <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-500 py-2 inline-block">Premium</span>
      </h2>
      
      <p class="text-white/40 mt-2 max-w-2xl mx-auto text-lg leading-relaxed">
        Calidad Ultra HD y estabilidad garantizada.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {benefits.map((item) => (
        <div class="group relative h-[450px] rounded-2xl overflow-hidden cursor-default border border-white/10 hover:border-white/30 transition-all duration-500">
          
          <div class="absolute inset-0 bg-gray-900">
            <img 
              src={item.image} 
              alt={item.title} 
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110 opacity-70 group-hover:opacity-100"
              loading="eager"
            />
          </div>
          
          <div class="absolute inset-0 bg-gradient-to-t from-[#02050b] via-[#02050b]/80 to-transparent"></div>
          
          <div class={`absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r ${item.color}`}></div>

          <div class="absolute inset-0 flex flex-col justify-end p-8">
            <h3 class="text-2xl font-black text-white uppercase italic tracking-wide mb-2 translate-y-2 group-hover:translate-y-0 transition-transform duration-500">{item.title}</h3>
            <div class={`text-xs font-bold bg-clip-text text-transparent bg-gradient-to-r ${item.color} mb-4 uppercase tracking-widest translate-y-2 group-hover:translate-y-0 transition-transform duration-500 delay-75`}>
              {item.subtitle}
            </div>
            <p class="text-white/70 text-sm leading-relaxed translate-y-4 opacity-0 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-500 delay-100">
              {item.desc}
            </p>
          </div>

        </div>
      ))}
    </div>

  </div>
</section>

<style>
  /* Ensure no clipping on small screens even with overflow hidden on parent */
  .custom-italic-title {
    line-height: 1.1;
    margin-right: -20px; /* Compensate visually for the padding */
  }
</style>
