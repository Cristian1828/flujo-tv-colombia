---
const deviceIcons: Record<string, string> = {
  phone: `<svg class="w-14 h-14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><rect x="7" y="2" width="10" height="20" rx="2"/><path d="M11 19h2"/></svg>`,
  tvbox: `<svg class="w-14 h-14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><rect x="4" y="9" width="16" height="10" rx="2"/><path d="M8 9V7"/><path d="M16 9V7"/><path d="M9 19h6"/></svg>`,
  fire: `<svg class="w-14 h-14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M12 22a7 7 0 0 0 7-7c0-3-2-5-3-6 0 2-1 3-2 4-1-2-1-4-4-7C7 8 5 11 5 15a7 7 0 0 0 7 7z"/></svg>`,
  google: `<svg class="w-14 h-14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><circle cx="12" cy="12" r="9"/><path d="M12 7v5l3 2"/></svg>`,
  stick: `<svg class="w-14 h-14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><rect x="3" y="10" width="14" height="6" rx="3"/><path d="M17 13h4"/><path d="M19 11v4"/></svg>`,
  tv: `<svg class="w-14 h-14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><rect x="3" y="6" width="18" height="12" rx="2"/><path d="M7 21h10"/><path d="M9 18v3"/><path d="M15 18v3"/></svg>`,
};

const highlightIcons: Record<string, string> = {
  sparkle: `<svg class="w-12 h-12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M12 2l1.2 4.2L17.4 7.4l-4.2 1.2L12 12l-1.2-3.4-4.2-1.2 4.2-1.2L12 2z"/><path d="M5 12l.8 2.8L8.6 16l-2.8.8L5 19.6l-.8-2.8L1.4 16l2.8-.8L5 12z"/><path d="M19 12l.8 2.8 2.8.8-2.8.8L19 19.6l-.8-2.8-2.8-.8 2.8-.8L19 12z"/></svg>`,
  refresh: `<svg class="w-12 h-12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M21 12a9 9 0 0 1-15.3 6.4"/><path d="M3 12a9 9 0 0 1 15.3-6.4"/><path d="M3 16v2h2"/><path d="M21 8V6h-2"/></svg>`,
};

const devices = [
  { name: "Android (móvil/tablet)", desc: "App en Android", icon: "phone" },
  { name: "TV Box", desc: "Para ver en tu TV", icon: "tvbox" },
  { name: "Fire Stick", desc: "Dispositivo compatible", icon: "fire" },
  { name: "Google TV", desc: "Dispositivo compatible", icon: "google" },
  { name: "Xiaomi Stick", desc: "Dispositivo compatible", icon: "stick" },
  { name: "Smart TV sin Android", desc: "Requiere TV Box", icon: "tv" }
];
---

<section id="dispositivos" class="relative py-32 bg-black overflow-x-hidden">
  <!-- Decorative background -->
  <div class="absolute inset-0">
    <div class="absolute top-1/2 left-0 w-full h-px bg-gradient-to-r from-transparent via-yellow-500/30 to-transparent"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
      <div class="w-96 h-96 bg-yellow-500/10 rounded-full blur-3xl"></div>
    </div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-6">
    <!-- Header con líneas diagonales -->
    <div class="mb-24 text-center relative">
      <div class="absolute top-0 left-0 w-32 h-1 bg-yellow-500 transform -rotate-45"></div>
      <div class="absolute top-0 right-0 w-32 h-1 bg-blue-500 transform rotate-45"></div>
      
      <div class="inline-block mb-6 px-8 py-3 bg-gradient-to-r from-yellow-500/10 via-blue-500/10 to-red-500/10 border-y-2 border-yellow-500/30">
        <span class="text-yellow-400 font-black text-sm tracking-widest uppercase">Dónde ver</span>
      </div>
      
          <h2 class="text-5xl sm:text-6xl md:text-7xl font-black text-white mb-4 leading-[0.95] pb-1">
        CUALQUIER
        <span class="block text-transparent bg-clip-text bg-gradient-to-r from-yellow-500 via-blue-500 to-red-500">
          PANTALLA
        </span>
      </h2>
      
      <p class="text-2xl text-white/70 max-w-3xl mx-auto">
        Úsalo en Android y dispositivos compatibles. Smart TV sin Android requiere TV Box.
      </p>
    </div>

    <!-- Grid hexagonal / Honeycomb style -->
    <div class="grid grid-cols-2 md:grid-cols-3 gap-6 mb-20">
      {devices.map((device, index) => (
        <div 
          class="group relative"
          style={`animation-delay: ${index * 0.1}s;`}
        >
          {/* Hexagonal background effect */}
          <div class="absolute inset-0 bg-gradient-to-br from-yellow-500/20 to-transparent transform skew-y-3 group-hover:skew-y-0 transition-transform duration-500"></div>
          
          {/* Card content */}
          <div class="relative bg-gray-900/50 backdrop-blur border-2 border-gray-800 group-hover:border-yellow-500 p-8 transition-all duration-500 group-hover:scale-105">
            {/* Icon */}
            <div class="text-white/90 mb-4 group-hover:scale-125 transition-transform duration-300">
              <span class="inline-flex" set:html={deviceIcons[device.icon]} />
            </div>
            
            {/* Text */}
            <h3 class="text-xl font-black text-white mb-2">
              {device.name}
            </h3>
            <p class="text-sm text-white/60">
              {device.desc}
            </p>

            {/* Animated corner accent */}
            <div class="absolute top-0 right-0 w-0 h-0 border-t-8 border-r-8 border-yellow-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>
          </div>
        </div>
      ))}
    </div>

    <!-- Bottom feature highlight con split layout -->
    <div class="grid md:grid-cols-2 gap-0 border-4 border-yellow-500/30 overflow-hidden">
      {/* Left - Instalación guiada */}
      <div class="bg-gradient-to-br from-yellow-500/10 to-transparent p-12 border-r-2 border-yellow-500/30">
        <div class="text-yellow-400 mb-6">
          <span class="inline-flex" set:html={highlightIcons.sparkle} />
        </div>
        <h3 class="text-3xl font-black text-white mb-4">
          Instalación guiada
        </h3>
        <p class="text-white/70 text-lg">
          Te acompañamos para instalar y activar en tu Android o TV Box de forma rápida.
        </p>
      </div>

      {/* Right - Acceso flexible */}
      <div class="bg-gradient-to-bl from-blue-500/10 to-transparent p-12">
        <div class="text-blue-400 mb-6">
          <span class="inline-flex" set:html={highlightIcons.refresh} />
        </div>
        <h3 class="text-3xl font-black text-white mb-4">
          Acceso flexible
        </h3>
        <p class="text-white/70 text-lg">
          Usa tu cuenta en tus dispositivos compatibles y administra tus accesos con facilidad.
        </p>
      </div>
    </div>
  </div>
</section>

<style>
  .group:nth-child(even) {
    transform: translateY(1rem);
  }

  .group:hover:nth-child(even) {
    transform: translateY(0);
  }
</style>
