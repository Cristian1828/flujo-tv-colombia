---
import { waLink } from '../config/site';

const activationHref = waLink('Hola, ya instalé la App. Quiero activar mi cuenta.');

const steps = [
  {
    n: '01',
    title: 'Solicita',
    desc: 'Haz clic en el botón de WhatsApp. Soporte inmediato.',
    iconPath: 'M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z'
  },
  {
    n: '02',
    title: 'Valida',
    desc: 'Confirmamos si tu TV Box o Android es compatible.',
    iconPath: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z'
  },
  {
    n: '03',
    title: 'Instala',
    desc: 'Te damos la App oficial y te guiamos si lo necesitas.',
    iconPath: 'M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4'
  },
  {
    n: '04',
    title: 'Disfruta',
    desc: 'Ingresas tu usuario y contraseña. TV Premium lista.',
    iconPath: 'M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z M21 12a9 9 0 11-18 0 9 9 0 0118 0z'
  }
];
---

<section id="como-funciona" class="relative py-24 bg-[#030014] overflow-hidden">
  
  <div class="relative z-10 max-w-7xl mx-auto px-6">
    
    <div class="mb-20 text-center">
       <div class="inline-flex items-center gap-2 mb-2 px-3 py-1 bg-white/5 rounded-full border border-white/10">
         <span class="text-[10px] font-bold text-white/70 uppercase tracking-widest">Simplificado</span>
       </div>
       <h2 class="text-3xl md:text-5xl font-black text-white tracking-tighter uppercase pr-2">
         Protocolo de <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-500">Activación</span>
       </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 relative">
      
      <!-- LIGERO DEGRADADO DETRAS -->
      <div class="hidden lg:block absolute top-[3rem] left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-purple-500/20 to-transparent z-0"></div>

      {steps.map((step, i) => (
        <div class="relative group z-10 text-center">
          
          <!-- Glass Icon Container -->
          <div class="w-24 h-24 mx-auto mb-6 relative">
            <div class="absolute inset-0 bg-gradient-to-br from-white/10 to-white/0 rounded-2xl md:rounded-3xl border border-white/10 backdrop-blur-md group-hover:border-purple-500/50 transition-colors duration-500"></div>
            
            <div class="absolute inset-0 flex items-center justify-center text-white/80 group-hover:text-purple-400 transition-colors">
               <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                 <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={step.iconPath} />
               </svg>
            </div>

            <!-- Floating Badge -->
            <div class="absolute -top-3 -right-3 w-8 h-8 bg-[#030014] border border-purple-500/30 rounded-full flex items-center justify-center text-xs font-black text-white shadow-lg z-20">
              {step.n}
            </div>
          </div>

          <h3 class="text-xl font-bold text-white mb-2 uppercase tracking-wide">{step.title}</h3>
          <p class="text-white/50 text-sm leading-relaxed max-w-[200px] mx-auto">
            {step.desc}
          </p>

        </div>
      ))}
    </div>

    <div class="mt-16 text-center">
      <a 
        href={activationHref}
        target="_blank"
        class="inline-flex items-center gap-3 px-10 py-4 bg-purple-600 hover:bg-purple-500 text-white font-black uppercase tracking-widest text-xs rounded-full shadow-[0_0_30px_rgba(168,85,247,0.3)] transition-all transform hover:scale-105"
      >
        Activar Cuenta
      </a>
    </div>

  </div>
</section>
