---
import { site, waLink } from '../config/site';

const waHelp = waLink('Hola, necesito ayuda para instalar Flujo TV Colombia.');

const steps = [
  {
    n: '1',
    title: 'Te activamos la cuenta',
    desc: 'Coordinas el plan por WhatsApp y confirmamos tu activación.',
    color: 'from-yellow-500/30 to-transparent',
  },
  {
    n: '2',
    title: 'Instalas en tu dispositivo',
    desc: 'Android (celular/tablet) o TV Box / Fire Stick / Google TV / Xiaomi Stick.',
    color: 'from-blue-500/30 to-transparent',
  },
  {
    n: '3',
    title: 'Inicias sesión y listo',
    desc: 'Te guiamos para entrar y dejar todo funcionando sin vueltas.',
    color: 'from-red-500/30 to-transparent',
  },
  {
    n: '4',
    title: 'Soporte cuando lo necesites',
    desc: `Escríbenos por WhatsApp o al correo ${site.supportEmail}.`,
    color: 'from-yellow-500/30 to-transparent',
  },
];
---

<section id="instalacion" class="relative py-32 bg-black overflow-x-hidden">
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-1/3 left-1/4 w-96 h-96 bg-yellow-500 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/3 right-1/4 w-96 h-96 bg-red-500 rounded-full blur-3xl"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-6">
    <div class="mb-24 text-center relative">
      <div class="absolute top-0 left-0 w-32 h-1 bg-yellow-500 transform -rotate-45"></div>
      <div class="absolute top-0 right-0 w-32 h-1 bg-blue-500 transform rotate-45"></div>

      <div class="inline-block mb-6 px-8 py-3 bg-gradient-to-r from-yellow-500/10 via-blue-500/10 to-red-500/10 border-y-2 border-yellow-500/30">
        <span class="text-yellow-400 font-black text-sm tracking-widest uppercase">Instalación</span>
      </div>

      <h2 class="text-5xl sm:text-6xl md:text-8xl font-black text-white mb-6 leading-[0.95]">
        QUEDAS
        <span class="block text-transparent bg-clip-text bg-gradient-to-r from-yellow-500 via-blue-500 to-red-500">LISTO EN POCO</span>
      </h2>

      <p class="text-2xl text-white/70 max-w-3xl mx-auto">
        Te acompañamos en compatibilidad, instalación y acceso. Sin promesas raras: soporte real.
      </p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {steps.map((s, index) => (
        <div class="group relative" style={`animation-delay:${index * 0.1}s;`}>
          <div class={`relative bg-gray-900/50 backdrop-blur border-2 border-gray-800 group-hover:border-yellow-500 p-8 transition-all duration-500 group-hover:scale-105 bg-gradient-to-br ${s.color}`}
          >
            <div class="flex items-start justify-between gap-4">
              <div class="text-6xl font-black text-white/10 leading-none">{s.n}</div>
              <div class="w-0 h-0 border-t-8 border-r-8 border-yellow-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>
            </div>

            <h3 class="mt-3 text-2xl font-black text-white mb-3">{s.title}</h3>
            <p class="text-white/70 leading-relaxed">{s.desc}</p>
          </div>
        </div>
      ))}
    </div>

    <div class="mt-16 text-center">
      <a
        href={waHelp}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-3 px-12 py-6 bg-yellow-500 text-black font-black text-xl hover:bg-yellow-400 transition-all duration-300"
      >
        <span>HABLAR CON SOPORTE</span>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M12 4v16m8-8H4" />
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  [style*="animation-delay"] {
    animation: fadeInUp 0.7s ease-out backwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
  }
</style>
