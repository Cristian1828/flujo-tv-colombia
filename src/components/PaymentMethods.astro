---
import { waLink } from '../config/site';

const payIcons: Record<string, string> = {
  card: `<svg class="w-16 h-16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><rect x="3" y="5" width="18" height="14" rx="2"/><path d="M3 10h18"/><path d="M7 15h4"/></svg>`,
  bank: `<svg class="w-16 h-16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M3 10h18"/><path d="M5 10V19"/><path d="M9 10V19"/><path d="M15 10V19"/><path d="M19 10V19"/><path d="M4 19h16"/><path d="M12 3l9 6H3l9-6z"/></svg>`,
  phone: `<svg class="w-16 h-16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><rect x="7" y="2" width="10" height="20" rx="2"/><path d="M11 19h2"/></svg>`,
  wallet: `<svg class="w-16 h-16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M3 7h18v12a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V7z"/><path d="M3 7a2 2 0 0 1 2-2h12"/><path d="M17 13h4v4h-4a2 2 0 0 1 0-4z"/></svg>`,
  cash: `<svg class="w-16 h-16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><rect x="3" y="7" width="18" height="10" rx="2"/><path d="M7 12h.01"/><path d="M17 12h.01"/><circle cx="12" cy="12" r="2.5"/></svg>`,
};

const paymentMethods = [
  { icon: "card", name: "Tarjeta de Crédito", brands: ["Visa", "Mastercard", "AmEx"] },
  { icon: "card", name: "Tarjeta Débito", brands: ["Visa Débito", "Mastercard Débito"] },
  { icon: "bank", name: "PSE", brands: ["Pago Seguro en Línea"] },
  { icon: "wallet", name: "Nequi", brands: ["Transferencia instantánea"] },
  { icon: "wallet", name: "Daviplata", brands: ["Billetera digital"] },
  { icon: "cash", name: "Pago en efectivo", brands: ["Según disponibilidad"] }
];

const waPay = waLink('Hola, quiero comprar Flujo TV Colombia. ¿Qué métodos de pago tienen disponibles?');
---

<section class="relative py-32 bg-black overflow-hidden">
  <!-- Diagonal grid pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="grid grid-cols-12 h-full">
      {[...Array(12)].map((_, i) => (
        <div class="border-r border-white"></div>
      ))}
    </div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-6">
    <!-- Header -->
    <div class="mb-20">
      <div class="flex items-center gap-4 mb-6">
        <div class="h-1 w-20 bg-yellow-500"></div>
        <span class="text-yellow-500 font-black text-sm tracking-widest">PAGA FÁCIL</span>
      </div>
      
      <h2 class="text-6xl md:text-8xl font-black text-white mb-6 leading-tight">
        MÉTODOS DE
        <span class="block text-transparent bg-clip-text bg-gradient-to-r from-yellow-500 via-blue-500 to-red-500">
          PAGO
        </span>
      </h2>
      
      <p class="text-xl md:text-2xl text-white/70 max-w-2xl">
        Coordinamos el pago por WhatsApp y te confirmamos el método disponible.
      </p>
    </div>

    <!-- Payment cards en zigzag -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-20">
      {paymentMethods.map((method, index) => (
        <div 
          class={`group relative ${index % 2 === 0 ? 'lg:translate-y-0' : 'lg:translate-y-12'}`}
          style={`animation-delay: ${index * 0.1}s;`}
        >
          {/* Card */}
          <div class="relative bg-gradient-to-br from-gray-900 to-gray-800 border-2 border-gray-700 p-8 hover:border-yellow-500 transition-all duration-500 group-hover:scale-105">
            {/* Icon gigante */}
            <div class="text-white/90 mb-6 group-hover:scale-110 transition-transform duration-500">
              <span class="inline-flex" set:html={payIcons[method.icon]} />
            </div>

            {/* Name */}
            <h3 class="text-2xl font-black text-white mb-4">
              {method.name}
            </h3>

            {/* Brands */}
            <div class="space-y-2">
              {method.brands.map(brand => (
                <div class="text-sm text-white/60 flex items-center gap-2">
                  <div class="w-1.5 h-1.5 bg-yellow-500 rounded-full"></div>
                  {brand}
                </div>
              ))}
            </div>

            {/* Hover glow */}
            <div class="absolute inset-0 bg-yellow-500/0 group-hover:bg-yellow-500/10 transition-colors duration-500 pointer-events-none"></div>
          </div>

          {/* Corner accent */}
          <div class="absolute -top-2 -right-2 w-8 h-8 border-t-4 border-r-4 border-yellow-500 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <div class="absolute -bottom-2 -left-2 w-8 h-8 border-b-4 border-l-4 border-blue-500 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        </div>
      ))}
    </div>

    <!-- Nota realista -->
    <div class="py-10 border-y-2 border-gray-800 text-center text-white/70">
      Los métodos pueden variar según disponibilidad. Te confirmamos todo por WhatsApp.
    </div>

    <!-- CTA final -->
    <div class="text-center mt-16">
      <a 
        href={waPay}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-3 px-12 py-6 bg-yellow-500 text-black font-black text-xl hover:bg-yellow-400 transition-all duration-300 hover:scale-105"
      >
        <span>¿Dudas con el pago?</span>
        <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  [style*="animation-delay"] {
    animation: fadeInUp 0.8s ease-out backwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
  }
</style>
